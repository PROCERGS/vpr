{% extends 'PROCERGSVPRCoreBundle::base.admin.html.twig' %}
{% set contentName = 'admin.steps'|trans %}
{% set actionName = 'admin.edit'|trans %}

{% block content -%}
    <div class="navbar">
        <a class="btn btn-default" href="{{ path('admin_step') }}" role="button"><span
                    class="glyphicon glyphicon-arrow-left"></span> {% trans %}admin.back_to_list{% endtrans %}</a>
    </div>

    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {{ form_start(edit_form, {'attr': {'role':'form', 'class':'form-horizontal'}}) }}
    {{ form_errors(edit_form) }}

    <div class="form-group">
        <label class="col-sm-2 control-label">{{ 'admin.name'|trans }}</label>
        <div class="col-sm-7">
            {{ form_errors(edit_form.name) }}
            {{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">{{ 'admin.poll'|trans }}</label>
        <div class="col-sm-5">
            {{ form_errors(edit_form.poll) }}
            {{ form_widget(edit_form.poll, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">{{ 'admin.sorting'|trans }}</label>
        <div class="col-sm-1">
            {{ form_errors(edit_form.sorting) }}
            {{ form_widget(edit_form.sorting, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">{{ 'admin.max_selection'|trans }}</label>
        <div class="col-sm-1">
            {{ form_errors(edit_form.maxSelection) }}
            {{ form_widget(edit_form.maxSelection, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group form-actions">
        <div class="col-lg-10 col-lg-offset-2">
            {{ form_widget(edit_form.submit, {'attr': {'class': 'btn btn-success btn-sm btn-save'},'label':'admin.save'|trans}) }}

            {{ form_end(edit_form) }}

            {% if is_granted('ROLE_STEP_DELETE') %}
                {{ form_start(delete_form) }}
                {{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-danger btn-sm btn-delete'},'label':'admin.delete'|trans}) }}
                {{ form_end(delete_form) }}
            {% endif %}
        </div>
    </div>
{% endblock %}

