<div class="table-responsive">

    <div style="margin-bottom: 20px;">
        <button class="btn btn-success btn-form-type" data-type="1" data-toggle="modal" data-target="#myModal">Solicitar transmissão</button>
        <button class="btn btn-info btn-form-type" data-type="2" data-toggle="modal" data-target="#myModal">Enviar senha</button>
    </div>



    <form action="send" method="post" id="ballotbox-items-form">
        <input type="hidden" name="message_type" value="1" id="message-type"></input>
        <input type="hidden" name="selection_type" value="" id="selection-type"></input>

        <div class="modal fade" tabindex="-1" role="dialog" id="myModal">
          <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="exampleModalLabel">Selecione o tipo de envio</h4>
                </div>
                <div class="modal-body">
                    <button type="button" class="btn btn-primary btn-selection-type" value="1">Enviar para a seleção</button>
                    <button type="button" class="btn btn-primary btn-selection-type" value="2">Enviar para todos da pesquisa</button>
                </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->

        <table class="table table-striped table-bordered table-hover records_list">
            <thead>
                <tr>
                    <th><input type="checkbox" id="check-all"></input></th>
                    <th>{{ 'admin.pin'|trans }}</th>
                    <th>{{ 'admin.email'|trans }}</th>
                    <th>{{ 'admin.phone'|trans }}</th>
                    <th>{{ 'admin.city'|trans }}</th>
                    <th>{{ 'admin.status'|trans }}</th>
                    <th>{{ 'admin.actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% if(entities.items) %}
                    {% for entity in entities %}
                        <tr>
                            <td><input type="checkbox" name="ballotboxes[]" value="{{entity.id}}" class="ballot-check"></input></td>
                            <td>{{ entity.pin }}</td>
                            <td>{{ entity.email }}</td>
                            <td>{{ entity.fone }}</td>
                            <td>{% if (entity.city) %}{{ entity.city.name }}{% endif %}</td>
                            <td>
                                {% if (entity.setupAt == null) %}
                                    Disponível
                                {% elseif (entity.closedAt == null) %}
                                    Ativa
                                {% else %}
                                    Encerrada
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <a title="{{ 'admin.show'|trans }}" class="btn btn-default btn-sm" href="{{ path('admin_ballotbox_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open"></span></a>
                                <a title="{{ 'admin.edit'|trans }}" class="btn btn-default btn-sm" href="{{ path('admin_ballotbox_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                        <tr><td colspan="5" class="text-center">{% trans %}admin.no_record_found{% endtrans %}</td></tr>
                {% endif %}
            </tbody>
        </table>
    </form>
</div>

<div class="row text-center">
    {{ knp_pagination_render(entities) }}
</div>