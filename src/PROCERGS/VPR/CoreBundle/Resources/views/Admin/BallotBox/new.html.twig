{% extends 'PROCERGSVPRCoreBundle::base.admin.html.twig' %}
{% set contentName = 'admin.ballotBox'|trans %}
{% set actionName = 'admin.add'|trans %}

{% block content -%}
    <div class="navbar">
        <a class="btn btn-default" href="{{ path('admin_ballotbox') }}" role="button"><span class="glyphicon glyphicon-arrow-left"></span> {% trans %}admin.back_to_list{% endtrans %}</a>
    </div>

    {{ form_start(form, {'attr': {'role':'form', 'class':'form-horizontal'}}) }}
    {{ form_errors(form) }}
    {{ form_widget(form.secret) }}
    {% set passphrase = form.vars.data.secret %}

    <div class="form-group">
        <label class="col-sm-2 control-label">{{ 'admin.name'|trans }}</label>
        <div class="col-sm-5">
            {{ form_errors(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">{{ 'admin.poll'|trans }}</label>
        <div class="col-sm-5">
            {{ form_errors(form.poll) }}
            {{ form_widget(form.poll, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-inline form-group">
        <label class="col-sm-2 control-label">{{ 'admin.opening_time'|trans }}</label>
        <div class="col-sm-10">
            {{ form_errors(form.openingTime) }}
            {{ form_widget(form.openingTime, {'attr': {'class': ''}}) }}
        </div>
    </div>

    <div class="form-inline form-group">
        <label class="col-sm-2 control-label">{{ 'admin.closing_time'|trans }}</label>
        <div class="col-sm-10">
            {{ form_errors(form.closingTime) }}
            {{ form_widget(form.closingTime, {'attr': {'class': ''}}) }}
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">{{ 'admin.city'|trans }}</label>
        <div class="col-sm-5">
            {{ form_errors(form.city) }}
            {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">{{ 'admin.address'|trans }}</label>
        <div class="col-sm-10">
            {{ form_errors(form.address) }}
            {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">{{ 'admin.latitude'|trans }}</label>
        <div class="col-sm-4">
            {{ form_errors(form.latitude) }}
            {{ form_widget(form.latitude, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">{{ 'admin.longitude'|trans }}</label>
        <div class="col-sm-4">
            {{ form_errors(form.longitude) }}
            {{ form_widget(form.longitude, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <label>
                    {{ form_errors(form.isOnline) }}
                    {{ form_widget(form.isOnline) }} {{ 'admin.ballotbox_online'|trans }}
                </label>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 col-md-offset-2 text-center passphrase-box bg-danger">
            <p>{% trans %}<strong>WARNING</strong>: Below you'll find this ballot box password for it's private key. Copy and save it to a safe place. If you don't, it <strong>CANNOT BE RECOVERED</strong> and you'll have to create another ballot box.{% endtrans %}</p>
            <p class="passphrase">{{ passphrase }}</p>
        </div>
    </div>

    <div class="form-group form-actions">
        <div class="col-lg-10 col-lg-offset-2">
            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-success btn-sm btn-save'},'label':'admin.save'|trans}) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
