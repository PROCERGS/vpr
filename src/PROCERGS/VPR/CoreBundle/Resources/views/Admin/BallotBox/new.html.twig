{% extends 'PROCERGSVPRCoreBundle::base.admin.html.twig' %}
{% set contentName = 'admin.ballotBox'|trans %}
{% set actionName = 'admin.add'|trans %}

{% block content -%}
    <div class="navbar">
        <a class="btn btn-default" href="{{ path('ballotbox') }}" role="button"><span class="glyphicon glyphicon-arrow-left"></span> {% trans %}admin.back_to_list{% endtrans %}</a>
    </div>

    {{ form_start(form, {'attr': {'role':'form', 'class':'form-horizontal'}}) }}
        {{ form_errors(form) }}

        <div class="form-group">
            <label class="col-sm-2 control-label">{{ 'admin.poll'|trans }}</label>
            <div class="col-sm-5">
                {{ form_errors(form.name) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">{{ 'admin.poll'|trans }}</label>
            <div class="col-sm-5">
                {{ form_errors(form.poll) }}
                {{ form_widget(form.poll, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>        

        <div class="form-inline form-group">
            <label class="col-sm-2 control-label">{{ 'admin.opening_time'|trans }}</label>
            <div class="col-sm-10">
                {{ form_errors(form.openingTime) }}
                {{ form_widget(form.openingTime, {'attr': {'class': ''}}) }}
            </div>
        </div>

        <div class="form-inline form-group">
            <label class="col-sm-2 control-label">{{ 'admin.closing_time'|trans }}</label>
            <div class="col-sm-10">
                {{ form_errors(form.closingTime) }}
                {{ form_widget(form.closingTime, {'attr': {'class': ''}}) }}
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">{{ 'admin.secret'|trans }}</label>
            <div class="col-sm-7">
                {{ form_errors(form.secret) }}
                {{ form_widget(form.secret, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">{{ 'admin.private_key'|trans }}</label>
            <div class="col-sm-7">
                {{ form_errors(form.privateKey) }}
                {{ form_widget(form.privateKey, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    
        <div class="form-group">
            <label class="col-sm-2 control-label">{{ 'admin.public_key'|trans }}</label>
            <div class="col-sm-7">
                {{ form_errors(form.publicKey) }}
                {{ form_widget(form.publicKey, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">{{ 'admin.city'|trans }}</label>
            <div class="col-sm-5">
                {{ form_errors(form.city) }}
                {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>      

        <div class="form-group">
            <label class="col-sm-2 control-label">{{ 'admin.address'|trans }}</label>
            <div class="col-sm-10">
                {{ form_errors(form.address) }}
                {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">{{ 'admin.latitude'|trans }}</label>
            <div class="col-sm-4">
                {{ form_errors(form.latitude) }}
                {{ form_widget(form.latitude, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>    

        <div class="form-group">
            <label class="col-sm-2 control-label">{{ 'admin.longitude'|trans }}</label>
            <div class="col-sm-4">
                {{ form_errors(form.longitude) }}
                {{ form_widget(form.longitude, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>    

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        {{ form_errors(form.isOnline) }}
                        {{ form_widget(form.isOnline) }} {{ 'admin.ballotbox_online'|trans }}
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group form-actions">
            <div class="col-lg-10 col-lg-offset-2">
                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-success btn-sm btn-save'},'label':'admin.save'|trans}) }}
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
