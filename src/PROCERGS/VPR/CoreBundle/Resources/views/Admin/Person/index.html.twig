{% extends 'PROCERGSVPRCoreBundle::base.admin.html.twig' %}
{% set contentName = 'Usuários' %}
{% set actionName = 'Listar' %}

{% block content -%}
    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="alert alert-{{type}} alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover records_list">
            <thead>
                <tr>
                    <th width="5%">Id</th>
                    <th width="15%">Username</th>
                    <th width="15%">Nome</th>
                    <th width="15%">Sobrenome</th>
                    <th width="20%">Email</th>
                    <th width="5%">Habilitado?</th>
                    <th width="20%">Criado em</th>
                    <th width="5%">Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.id }}</td>
                        <td><a href="{{ path('admin_person_show', { 'id': entity.id }) }}">{{ entity.username }}</a></td>
                        <td>{{ entity.firstName }}</td>
                        <td>{{ entity.surname }}</td>
                        <td>{{ entity.email }}</td>
                        <td>{% if(entity.enabled) %}Sim{% else %}Não{% endif %}</td>
                        <td>{% if entity.createdAt %}{{ entity.createdAt|date('d/m/Y H:i:s') }}{% endif %}</td>
                        <td class="text-center">
                            <a title="Visualizar" class="btn btn-default btn-sm" href="{{ path('admin_person_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open"></span></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="row text-center">
        {{ knp_pagination_render(entities) }}
    </div>

{% endblock %}
