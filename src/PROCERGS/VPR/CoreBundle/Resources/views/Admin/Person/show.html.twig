{% extends 'PROCERGSVPRCoreBundle::base.admin.html.twig' %}
{% set contentName = 'Usuários' %}
{% set actionName = 'Visualizar' %}

{% block content -%}
    <div class="navbar">
        <a class="btn btn-default" href="{{ path('admin_person') }}" role="button"><span class="glyphicon glyphicon-arrow-left"></span> Voltar para lista</a>
    </div>

    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="alert alert-{{type}} alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label class="col-sm-3 control-label">Id</label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ entity.id }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">Username</label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ entity.username }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">Nome</label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ entity.firstName }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">Sobrenome</label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ entity.surname }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">Email</label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ entity.email }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">Habilitado?</label>
            <div class="col-sm-9">
                <p class="form-control-static">{% if(entity.enabled) %}Sim{% else %}Não{% endif %}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">Último login</label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ entity.lastLogin|date('d/m/Y H:i:s') }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">Criado em</label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ entity.createdAt|date('d/m/Y H:i:s') }}</p>
            </div>
        </div>
    </form>

    <div class="form-group form-actions">
        <div class="col-lg-10 col-lg-offset-2">            
            <a href="#" class="btn btn-sm btn-primary">Editar</a>
       </div>
    </div>
{% endblock %}