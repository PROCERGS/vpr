<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover records_list">
        <thead>
            <tr>
                <th width="5%">Id</th>
                <th width="70%">Nome</th>
                <th width="10%">Ordem</th>
                <th width="8%">Ações</th>
            </tr>
        </thead>
        <tbody>
            {% if(entities) %}
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('category_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.name }}</td>
                        <td>{{ entity.sorting }}</td>
                        <td>
                            <a title="Visualizar" class="btn btn-default btn-sm" href="{{ path('category_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open"></span></a>
                            <a title="Editar" class="btn btn-default btn-sm" href="{{ path('category_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                    <tr><td colspan="7" class="text-center">Nenhum registro encontrado</td></tr>
            {% endif %}                
        </tbody>
    </table>
</div>