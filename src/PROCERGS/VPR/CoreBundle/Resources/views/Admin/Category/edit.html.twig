{% extends 'PROCERGSVPRCoreBundle::base.admin.html.twig' %}
{% set contentName = 'admin.category'|trans %}
{% set actionName = 'admin.edit'|trans %}

{% block content -%}
    <div class="navbar">
        <a class="btn btn-default" href="{{ path('admin_category') }}" role="button"><span class="glyphicon glyphicon-arrow-left"></span> {% trans %}admin.back_to_list{% endtrans %}</a>
    </div>

    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="alert alert-{{type}} alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {{ form_start(edit_form, {'attr': {'role':'form', 'class':'form-horizontal'}}) }}
        {{ form_errors(edit_form) }}

        <div class="form-group">
            <label class="col-sm-2 control-label">{% trans %}admin.name{% endtrans %}</label>
            <div class="col-sm-7">
                {{ form_errors(edit_form.name) }}
                {{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">{% trans %}admin.sorting{% endtrans %}</label>
            <div class="col-sm-1">
                {{ form_errors(edit_form.sorting) }}
                {{ form_widget(edit_form.sorting, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">{% trans %}admin.title.bg{% endtrans %}</label>
            <div class="col-sm-2 col-input">
                {{ form_errors(edit_form.titleBg) }}
                {{ form_widget(edit_form.titleBg, {'attr': {'class': 'form-control colorHex'}}) }}
            </div>
            <div class="col-sm-2">
                <div class="colorSelector"><div class="bg" style="background-color: {{ edit_form.vars.data.titleBg}}"></div></div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">{% trans %}admin.icon.bg{% endtrans %}</label>
            <div class="col-sm-2 col-input">
                {{ form_errors(edit_form.iconBg) }}
                {{ form_widget(edit_form.iconBg, {'attr': {'class': 'form-control colorHex'}}) }}
            </div>
            <div class="col-sm-2">
                <div class="colorSelector"><div class="bg" style="background-color: {{ edit_form.vars.data.iconBg}}"></div></div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">{% trans %}admin.icon.bg{% endtrans %}</label>
            <div class="col-sm-2 col-input">
                {{ form_errors(edit_form.iconNum) }}
                {{ form_widget(edit_form.iconNum, {'attr': {'class': 'form-control colorHex'}}) }}
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">{% trans %}admin.option.bg{% endtrans %}</label>
            <div class="col-sm-2 col-input">
                {{ form_errors(edit_form.optionBg) }}
                {{ form_widget(edit_form.optionBg, {'attr': {'class': 'form-control colorHex'}}) }}
            </div>
            <div class="col-sm-2">
                <div class="colorSelector"><div class="bg" style="background-color: {{ edit_form.vars.data.optionBg}}"></div></div>
            </div>
        </div>

        <div class="form-group form-actions">
            <div class="col-lg-10 col-lg-offset-2">
                {{ form_widget(edit_form.submit, {'attr': {'class': 'btn btn-success btn-sm btn-save'},'label':'admin.save'|trans}) }}

    {{ form_end(edit_form) }}

                {{ form_start(delete_form) }}
                {{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-danger btn-sm btn-delete'},'label':'admin.delete'|trans}) }}
                {{ form_end(delete_form) }}
            </div>
        </div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
{% stylesheets 'bundles/procergsvprcore/css/colorpicker.css' filter='cssrewrite' %}
<link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
{% endblock %}

{% block javascripts %}
{{ parent() }}
{% javascripts '@PROCERGSVPRCoreBundle/Resources/public/js/colorpicker.js' %}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
<script type="text/javascript">
    $(function() {
        $('.colorSelector').ColorPicker({
            onChange: function (hsb, hex, rgb) {
                var el = this.data('colorpicker').el;
                $(el).find('.bg').css('backgroundColor', '#' + hex);
                $(el).parent().prev('.col-input').find(".colorHex").val("#" + hex);
            }
        });
    })
</script>
{% endblock %}