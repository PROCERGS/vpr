{% extends 'PROCERGSVPRCoreBundle::base.admin.html.twig' %}
{% set contentName = 'admin.poll'|trans %}
{% set actionName = 'admin.stats'|trans %}

{% block content -%}


    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="alert alert-{{type}} alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}


    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover records_list">
            <thead>
                <tr>
                    <th width="30%">{{ 'admin.corede'|trans }}</th>
                    <th width="15%">{{ 'admin.votes'|trans }}</th>
                    <th width="15%">{{ 'admin.voters'|trans }}</th>
                </tr>
            </thead>
            <tbody id="admin-poll-list">
                {% if(entities.items) %}
                    {% for entity in entities %}
                        {% if loop.first %}
                        <tr class="success">
                        {% elseif loop.last %}
                        <tr>
                        {% endif %}
                            <td>{{ entity.name }}</td>
                            <td>{% if entity.closingTime %}{{ entity.closingTime|date('d/m/Y H:i:s') }}{% endif %}</td>
                            <td>{{ entity.description }}</td>
                            <td>
                                <a title="{{ 'admin.show'|trans }}" class="btn btn-default btn-sm" href="{{ path('admin_poll_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open"></span></a>
                                {% if entity.apurationDone is null %}
                                <a title="{{ 'admin.edit'|trans }}" class="btn btn-default btn-sm" href="{{ path('admin_poll_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                        <tr><td colspan="7" class="text-center">{% trans %}admin.no_record_found{% endtrans %}</td></tr>
                {% endif %}
            </tbody>
        </table>
    </div>


    <div class="row text-center">
        {{ knp_pagination_render(entities) }}
    </div>
{% endblock %}