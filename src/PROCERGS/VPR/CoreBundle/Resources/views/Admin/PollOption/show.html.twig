{% extends 'PROCERGSVPRCoreBundle::base.admin.html.twig' %}
{% set contentName = 'admin.pollOption'|trans %}
{% set actionName = 'admin.show'|trans %}

{% block content -%}
    <div class="navbar">
        <a class="btn btn-default" href="{{ path('admin_poll_option') }}" role="button"><span class="glyphicon glyphicon-arrow-left"></span> {% trans %}admin.back_to_list{% endtrans %}</a>
    </div>

    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="alert alert-{{type}} alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label class="col-sm-3 control-label">{{ 'admin.id'|trans }}</label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ entity.id }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">{{ 'admin.poll'|trans }}</label>
            <div class="col-sm-9">
                <p class="form-control-static">{% if(entity.step.poll) %}{{ entity.step.poll.name }}{% endif %}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">{{ 'admin.step'|trans }}</label>
            <div class="col-sm-9">
                <p class="form-control-static">{% if(entity.step) %}{{ entity.step.sorting }} - {{ entity.step.name }}{% endif %}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">{{ 'admin.category'|trans }}</label>
            <div class="col-sm-9">
                <p class="form-control-static">{% if(entity.category) %}{{ entity.category.name }}{% endif %}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">{{ 'admin.corede'|trans }}</label>
            <div class="col-sm-9">
                <p class="form-control-static">{% if(entity.corede) %}{{ entity.corede.name }}{% endif %}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">{{ 'admin.title'|trans }}</label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ entity.title }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">{{ 'admin.description'|trans }}</label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ entity.Description }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">{{ 'admin.scope'|trans }}</label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ entity.scope }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">{{ 'admin.cost'|trans }}</label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ 'R$'|trans }} {{ entity.cost|number_format(2, ',', '.') }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">{{ 'admin.sorting'|trans }}</label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ entity.categorySorting }}</p>
            </div>
        </div>
    </form>

    <div class="form-group form-actions">
        <div class="col-lg-10 col-lg-offset-2">
            <a class="btn btn-default btn-sm" href="{{ path('admin_poll_option_new') }}" role="button"><span class="glyphicon glyphicon-file"></span> {%trans%}admin.add_poll_option{%endtrans%}</a>
            <a href="{{ path('admin_poll_option_edit', { 'id': entity.id }) }}" class="btn btn-sm btn-primary group-action">{{ 'admin.edit'|trans }}</a>

            {{ form_start(delete_form) }}
            {{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-danger btn-sm btn-delete'},'label':'admin.delete'|trans}) }}
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}