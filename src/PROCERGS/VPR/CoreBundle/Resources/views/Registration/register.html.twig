    <div class="col-sm-4">
        <a href="#about" data-toggle="tab" class="btn btn-primary btn-block btn-lg btn-tab btn-about active">
            <span class="glyphicon glyphicon-question-sign"></span>
            {% trans %}What is it?{% endtrans %}
        </a>
    </div>

    <div class="col-sm-4">
        <a href="#howto" data-toggle="tab" class="btn btn-primary btn-block btn-lg btn-tab btn-howto">
            <span class="glyphicon glyphicon-info-sign"></span>
            {% trans %}How do I vote?{% endtrans %}
        </a>
    </div>

    <div class="col-sm-4">
        <a href="#vote" data-toggle="tab" class="btn btn-primary btn-block btn-lg btn-tab btn-vote">
            <span class="glyphicon glyphicon-check"></span>
            {% trans %}Vote now!{% endtrans %}
        </a>
    </div>

    <div class="col-sm-12">
        <div class="tab-content">
            <button type="button" class="close tab-close" aria-hidden="true">
                <span class="glyphicon glyphicon-chevron-up"></span>
            </button>

            <div class="tab-pane tab-about" id="about">
