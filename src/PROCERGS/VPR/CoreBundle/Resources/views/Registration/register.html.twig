{% extends 'PROCERGSVPRCoreBundle::base.html.twig' %}

{% block body %}
{% trans_default_domain 'messages' %}

<div class="row">
  {% for type, messages in app.session.flashbag.all() %}
  {% for message in messages %}
    <div class="col-md-12">
        <div class="text-center alert alert-{{ type }}">
      {{ message }}
        </div>
    </div>
  {% endfor %}
  {% endfor %}
</div>

