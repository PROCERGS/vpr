{% extends 'PROCERGSVPRCoreBundle::base.html.twig' %}

{% block body %}
{% trans_default_domain 'messages' %}

<div class="row">
  {% for type, messages in app.session.flashbag.all() %}
  {% for message in messages %}
  <div class="col-md-12">
    <div class="text-center alert alert-{{ type }}">
      {{ message }}
    </div>
  </div>
  {% endfor %}
  {% endfor %}
</div>

<div class="row main-content">
  <div class="col-sm-4">
    <a href="#about" data-toggle="tab" class="btn btn-primary btn-lg btn-block btn-about">
      <span class="glyphicon glyphicon-question-sign"></span>
      <span class="text">O que é</span>
    </a>
  </div>

  <div class="col-sm-4">
    <a href="#howto" data-toggle="tab" class="btn btn-primary btn-lg btn-block btn-howto">
      <span class="glyphicon glyphicon-info-sign"></span>
      <span class="text">Como votar?</span>
    </a>
  </div>

  <div class="col-sm-4">
    <a href="#vote" data-toggle="tab" class="btn btn-primary btn-lg btn-block btn-vote">
      <span class="glyphicon glyphicon-check"></span>
      <span class="text">Vote agora!</span>
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="tab-content">
      <button type="button" class="close tab-close" aria-hidden="true">
        <span class="glyphicon glyphicon-chevron-up"></span>
      </button>
      <div class="tab-pane active" id="about">
