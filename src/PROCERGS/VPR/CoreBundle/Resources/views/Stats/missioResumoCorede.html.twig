{% extends 'PROCERGSVPRCoreBundle::base.admin.html.twig' %}
{% set contentName = 'report.missio'|trans %}
{% set actionName = 'report.missio.resumo.corede'|trans %}

{% block content -%}
{% for type, messages in app.session.flashbag.all() %}
{% for message in messages %}
<div class="alert alert-success alert-dismissable">
	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	{{ message }}
</div>
{% endfor %}
{% endfor %}
	<div class="jumbotron">
		<form method="GET" id="filter-form" action="{{ path('vpr_rl_resumo_corede') }}" role="form">
			<div class="row">
				<div class="form-group col-md-6">
					<label>{{ 'admin.poll'|trans }}</label>
					<div>
						<select id="poll_id" name="poll_id" class="form-control" required="required">
							<option value="">Selecione</option>
							{% for poll in polls %}
							<option value="{{ poll.id }}" {{  poll.id == currentPollId ? ' selected="selected" ' : '' }}>{{ poll.name | trans }}</option>
							{% endfor %}
						</select>
					</div>
				</div>
				<div class="form-group col-md-6">
					<label>{{ 'admin.corede'|trans }}</label>
					<div>
						<select id="corede_id" name="corede_id" class="form-control">
							<option value="">Selecione</option>
							{% for corede in coredes %}
							<option value="{{ corede.id }}" {{  corede.id == currentCoredeId ? ' selected="selected" ' : '' }}>{{ corede.name | trans }}</option>
							{% endfor %}
						</select>
					</div>
				</div>
			</div>
			 <div class="row">
                <div class="form-group col-md-12 text-right">
                    <button type="submit" class="btn btn-primary">{{ 'admin.filter'|trans }}</button>
                </div>
        	</div>
		</form>
	</div>
<div class="row">
{% if currentPollId %}
<div class="row-fluid col-md-3">
	<a href="{{ path('vpr_rl_resumo_corede_csv') }}?poll_id={{ currentPollId }}&corede_id={{ currentCoredeId }}" target="_blank">
		<button class="btn btn-success btn-form-type">{{ 'admin.ods'|trans }}</button>
	</a>
</div>
{% endif %}
</div>
{% if entities1 and entities4 %}
    <div class="table-responsive">
        {% include 'PROCERGSVPRCoreBundle::Stats/missioResumoCoredeList.html.twig' %}
    </div>
{% endif %}
{% endblock %}
{% block javascripts %}
{{ parent() }}
{% endblock %}
