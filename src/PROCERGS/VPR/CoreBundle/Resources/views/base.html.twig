{% extends '::base.html.twig' %}

{% block metatags %}
{{ parent() }}

<meta property="og:site_name" content="{% trans %}2015 Budget Priorities Voting{% endtrans %}"/>
<meta property="og:description" content="{% trans %}A Votação de Prioridades do Orçamento 2015 para o Estado do Rio Grande do Sul ocorre nos dias 2, 3 e 4 de junho. Serão R$ 192 milhões destinados à consulta neste ano.{% endtrans %}"/>
{% image '@PROCERGSVPRCoreBundle/Resources/public/images/facebook-image.png' %}
<meta property="og:image" content="{{ app.request.scheme ~'://' ~ app.request.host ~ asset_url }}" />
{% endimage %}

<meta name="keywords" content="orçamento, participação popular, votação, consulta, cidadania, cidadão, planejamento, Rio Grande do Sul, RS, #VotaRS, governo, procergs">
<meta name="author" content="PROCERGS">
<meta name="rating" content="general">
<meta name="robots" content="index,follow">
<meta name="googlebot" content="index,follow">
<meta name="revisit-after" content="7 days">

{% endblock %}

{% block header %}
<header class="text-center">
    <a href="{{ path('procergsvpr_core_homepage') }}" title="Votação de Prioridades">
        {%trans%}Priorities Voting<br />2015 BUDGET<br />02-04 of june{%endtrans%}
    </a>
</header>
<div id="social-bar" class="hidden-xs hidden-sm">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 text-center">
                <div class="pull-left"><a href="https://twitter.com/share" data-url="{{ path('procergsvpr_core_homepage') }}" class="twitter-share-button" data-lang="pt" data-text="{% trans %}A Votação de Prioridades do Orçamento 2015 para o Estado do Rio Grande do Sul ocorre nos dias 2, 3 e 4 de junho. Serão R$ 192 milhões destinados à consulta neste ano.{% endtrans %}">Tweet</a>
                    <script>
                        !function(d, s, id) {
                            var js, fjs = d.getElementsByTagName(s)[0];
                            if (!d.getElementById(id)) {
                                js = d.createElement(s);
                                js.id = id;
                                js.src = "https://platform.twitter.com/widgets.js";
                                fjs.parentNode.insertBefore(js, fjs);
                            }
                        }(document, "script", "twitter-wjs");
                    </script>
                </div>
                <div class="pull-left"><div id="fb-root"></div>
                    <script>
                        (function(d, s, id) {
                            var js, fjs = d.getElementsByTagName(s)[0];
                            if (d.getElementById(id))
                                return;
                            js = d.createElement(s);
                            js.id = id;
                            js.src = "//connect.facebook.net/pt_BR/sdk.js#xfbml=1&appId=424387027695369&version=v2.0";
                            fjs.parentNode.insertBefore(js, fjs);
                        }(document, 'script', 'facebook-jssdk'));
                    </script>
                    <div class="fb-like" data-href="{{ path('procergsvpr_core_homepage') }}" data-layout="button" data-action="like" data-show-faces="false" data-share="true"></div>
                </div>
                <div class="pull-left social-gplus">
                    <div class="g-plusone" data-annotation="none" data-href="{{ path('procergsvpr_core_homepage') }}"></div>
                    <script type="text/javascript">
                        window.___gcfg = {lang: 'pt-BR'};

                        (function() {
                            var po = document.createElement('script');
                            po.type = 'text/javascript';
                            po.async = true;
                            po.src = 'https://apis.google.com/js/platform.js';
                            var s = document.getElementsByTagName('script')[0];
                            s.parentNode.insertBefore(po, s);
                        })();
                    </script>
                </div>
                {% if app.user %}
                <a href="{{ path('fos_user_security_logout') }}" class="glyphicon glyphicon-off pull-right logout-icon" title="{{ 'Exit voting' | trans }}"></a>
                {% endif %}
                <a href="{{ path('procergsvpr_core_homepage') }}" class="glyphicon glyphicon-home pull-right home-icon" title="{{ 'Back to home' | trans }}"></a>
            </div>
        </div>
    </div>
</div>

{% for flashMessage in app.session.flashbag.get('notice') %}
<div class="alert alert-info">
    <div class="container">
        {{ flashMessage }}
    </div>
</div>
{% endfor %}
{% endblock %}

{% block stylesheets %}
    {% stylesheets 'bundles/procergsvprcore/css/*.css' filter='cssrewrite' %}
<link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block footer %}
<footer>
    <div class="container">
        <div class="row images">
            <div class="col-xs-4 col-sm-3 text-center">
                <a href="http://www.portaldaparticipacao.rs.gov.br" target="_blank">
                  {% image '@PROCERGSVPRCoreBundle/Resources/public/images/logo-PPCF.png' %}
                  <img src="{{ asset_url }}" alt="{%trans%}PPC{%endtrans%}" class="img-responsive">
                  {% endimage %}
                </a>
            </div>

            <div class="col-xs-4 col-sm-3 text-center">
                {% image '@PROCERGSVPRCoreBundle/Resources/public/images/logo-Coredes.png' %}
                <img src="{{ asset_url }}" alt="{%trans%}COREDES{%endtrans%}" class="img-responsive">
                {% endimage %}
            </div>

            <div class="col-xs-4 col-sm-3 text-center">
                {% image '@PROCERGSVPRCoreBundle/Resources/public/images/logo-ONU.png' %}
                <img src="{{ asset_url }}" alt="{%trans%}ONU{%endtrans%}" class="img-responsive">
                {% endimage %}
            </div>

            <div class="col-xs-12 col-sm-3 text-center">
                {% image '@PROCERGSVPRCoreBundle/Resources/public/images/logo-gov.png' %}
                <img src="{{ asset_url }}" alt="{%trans%}Rio Grande do Sul{%endtrans%}" class="img-responsive">
                {% endimage %}
            </div>
        </div>
    </div>
    <hr/>
    <div class="container">
        <div class="row about">
            <div class="col-xs-6 text-center">
                {% image '@PROCERGSVPRCoreBundle/Resources/public/images/logo-PROCERGS.png' %}
                <img src="{{ asset_url }}" alt="{%trans%}PROCERGS{%endtrans%}" class="img-responsive">
                {% endimage %}
            </div>
        </div>
    </div>

</footer>
{% endblock %}

{% block javascripts %}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<script src="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
{% javascripts '@PROCERGSVPRCoreBundle/Resources/public/js/*' %}
<script type="text/javascript" src="{{ asset_url }}"></script>

{% endjavascripts %}

