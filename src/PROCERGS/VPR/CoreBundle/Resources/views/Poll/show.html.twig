{% extends 'PROCERGSVPRCoreBundle::base.admin.html.twig' %}
{% set contentName = 'Eleições' %}
{% set actionName = 'Visualizar' %}

{% block content -%}
    <div class="navbar">
        <a class="btn btn-default" href="{{ path('poll') }}" role="button"><span class="glyphicon glyphicon-arrow-left"></span> Voltar para lista</a>
    </div>
        
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label class="col-sm-2 control-label">Id</label>
            <div class="col-sm-10">
                <p class="form-control-static">{{ entity.id }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Nome</label>
            <div class="col-sm-10">
                <p class="form-control-static">{{ entity.name }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Data abertura</label>
            <div class="col-sm-10">
                <p class="form-control-static">{{ entity.openingTime|date('d/m/Y H:i:s') }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Data fechamento</label>
            <div class="col-sm-10">
                <p class="form-control-static">{{ entity.closingTimime|date('d/m/Y H:i:s') }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Descrição</label>
            <div class="col-sm-10">
                <p class="form-control-static">{{ entity.description }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Chave publica</label>
            <div class="col-sm-10">
                <p class="form-control-static">{{ entity.publicKey }}</p>
            </div>
        </div>
    </form>

    <div class="form-group form-actions">
        <div class="col-lg-10 col-lg-offset-2">            
            <a href="{{ path('poll_edit', { 'id': entity.id }) }}" class="btn btn-sm btn-primary">Editar</a>

            {{ form_start(delete_form) }}
            {{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-danger btn-sm btn-delete'},'label':'Remover'}) }}
            {{ form_end(delete_form) }}
        </div>
    </div>

{% endblock %}
