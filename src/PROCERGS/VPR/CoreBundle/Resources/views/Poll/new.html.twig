{% extends 'PROCERGSVPRCoreBundle::base.admin.html.twig' %}
{% set contentName = 'Eleições' %}
{% set actionName = 'Adicionar' %}

{% block content -%}
    <div class="navbar">
        <a class="btn btn-default" href="{{ path('poll') }}" role="button"><span class="glyphicon glyphicon-arrow-left"></span> Voltar para lista</a>
    </div>

    {{ form_start(form, {'attr': {'role':'form', 'class':'form-horizontal'}}) }}
   
        <div class="form-group">
            <label class="col-sm-2 control-label">Nome</label>
            <div class="col-sm-10">
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-inline form-group">
            <label class="col-sm-2 control-label">Data abertura</label>
            <div class="col-sm-10">
                {{ form_errors(form.openingTime) }}
                {{ form_widget(form.openingTime, {'attr': {'class': ''}}) }}
            </div>
        </div>

        <div class="form-inline form-group">
            <label class="col-sm-2 control-label">Data fechamento</label>
            <div class="col-sm-10">
                {{ form_errors(form.closingTimime) }}
                {{ form_widget(form.closingTimime, {'attr': {'class': ''}}) }}
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Descrição</label>
            <div class="col-sm-10">
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Chave publica</label>
            <div class="col-sm-7">
                {{ form_widget(form.publicKey, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group form-actions">
            <div class="col-lg-10 col-lg-offset-2">
                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-success btn-sm btn-save'},'label':'Salvar'}) }}
            </div>
        </div>
    {{ form_end(form) }}
</ul>
{% endblock %}
