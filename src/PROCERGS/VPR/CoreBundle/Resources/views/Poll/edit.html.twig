{% extends 'PROCERGSVPRCoreBundle::base.admin.html.twig' %}
{% set contentName = 'Votações' %}
{% set actionName = 'Editar' %}

{% block content -%}
    <div class="navbar">
        <a class="btn btn-default" href="{{ path('poll') }}" role="button"><span class="glyphicon glyphicon-arrow-left"></span> Voltar para lista</a>
    </div>

    <div class="row">
        <div class="col-md-12">
            <ul class="nav nav-tabs" style="margin-bottom: 40px;">
                <li class="active"><a href="#poll" data-toggle="tab">Votação</a></li>
                <li><a href="#step" data-toggle="tab" href="#">Etapas</a></li>
            </ul>

            <div class="tab-content">
                <div class="tab-pane active" id="poll">

                    {% for type, messages in app.session.flashbag.all() %}
                        {% for message in messages %}
                            <div class="alert alert-{{type}} alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    {{ form_start(edit_form, {'attr': {'role':'form', 'class':'form-horizontal'}}) }}
                        {{ form_errors(edit_form) }}

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Name</label>
                            <div class="col-sm-10">
                                {{ form_errors(edit_form.name) }}
                                {{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-inline form-group">
                            <label class="col-sm-2 control-label">Data abertura</label>
                            <div class="col-sm-10">
                                {{ form_errors(edit_form.openingTime) }}
                                {{ form_widget(edit_form.openingTime, {'attr': {'class': ''}}) }}
                            </div>
                        </div>

                        <div class="form-inline form-group">
                            <label class="col-sm-2 control-label">Data fechamento</label>
                            <div class="col-sm-10">
                                {{ form_errors(edit_form.closingTime) }}
                                {{ form_widget(edit_form.closingTime, {'attr': {'class': ''}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Descrição</label>
                            <div class="col-sm-10">
                                {{ form_errors(edit_form.description) }}
                                {{ form_widget(edit_form.description, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Chave pública</label>
                            <div class="col-sm-7">
                                {{ form_errors(edit_form.publicKey) }}
                                {{ form_widget(edit_form.publicKey, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group form-actions">
                            <div class="col-lg-10 col-lg-offset-2">
                                {{ form_widget(edit_form.submit, {'attr': {'class': 'btn btn-success btn-sm btn-save'},'label':'Salvar'}) }}

                    {{ form_end(edit_form) }}

                                {{ form_start(delete_form) }}
                                {{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-danger btn-sm btn-delete'},'label':'Remover'}) }}
                                {{ form_end(delete_form) }}
                            </div>
                        </div>
                </div>

                <div class="tab-pane" id="step">
                    {% include 'PROCERGSVPRCoreBundle:Step:list.html.twig' with {'entities': steps} %}
                </div>

            </div>
        </div>
    </div>
{% endblock %}
