{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
        <div class="alert alert-danger">
            <ul>
                {% for error in errors %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            </ul>
        </div>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}

{% block number_widget %}
{% spaceless %}
    {% set type = type|default(attr['type']) %}
    {{ block('form_widget_simple') }}
{% endspaceless %}
{% endblock number_widget %}