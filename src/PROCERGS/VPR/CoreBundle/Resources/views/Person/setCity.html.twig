{% extends 'PROCERGSVPRCoreBundle::base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-xs-12">
        <h1>{% trans %}What's your voting city?{% endtrans %}</h1>

        {{ form_start(form, { 'action': path('vpr_city_selection'), 'attr': { 'role': 'form' } }) }}
            <div class="row">
                <div class="col-md-6 col-xs-12">
                    <p>{% trans %}You need to type the city where you vote so that we can show you the relevant options for you.{% endtrans %}</p>
                    <p>{% trans %}Please be aware that informing the wrong city will cause your vote to be discarted.{% endtrans %}</p>
                    <div class="form-group">
                        {{ form_label(form.city.name, 'City' | trans) }}
                        {{ form_widget(form.city.name, { 'attr': { 'class': 'form-control city' } } ) }}
                        {{ form_errors(form.city.name) }}
                    </div>
                </div>
                <div class="col-md-6 col-xs-12">
                    <p>{% trans %}Alternatively you can type your voter registration, without the need to type your city.{% endtrans %}</p>
                    <div class="form-group">
                        {{ form_label(form.voterRegistration, 'Voter Registration' | trans) }}
                        {{ form_widget(form.voterRegistration, { 'attr': { 'placeholder': 'Voter Registration' | trans, 'class': 'form-control' } } ) }}
                        {{ form_errors(form.voterRegistration) }}
                    </div>
                </div>

                <div class="col-xs-12 text-center">
                    {{ form_widget(form.submit, { 'attr': { 'class': 'btn btn-lg btn-primary' }, 'label': 'Continue' | trans}) }}
                </div>
            </div>
        {{ form_end(form) }}
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
            '@PROCERGSVPRCoreBundle/Resources/public/js/typeahead.bundle.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

<script>
    $(document).ready(function() {
        var citiesList = {{ cities | raw }};

        var cities = new Bloodhound({
            datumTokenizer: Bloodhound.tokenizers.obj.whitespace('value'),
            queryTokenizer: Bloodhound.tokenizers.whitespace,
            local: $.map(citiesList, function(city) { return { value: city.name }; })

        });

        cities.initialize();

        $('input.city').typeahead({
            hint: true,
            highlight: true,
            minLength: 1
        },
        {
            name: 'cities',
            displayKey: 'value',
            source: cities.ttAdapter()
        });
    });
</script>
{% endblock %}