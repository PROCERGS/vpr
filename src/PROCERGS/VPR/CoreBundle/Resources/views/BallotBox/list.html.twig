<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover records_list">
        <thead>
            <tr>
                <th width="5%">Id</th>
                <th width="15%">Nome</th>
                <th width="15%">Eleição</th>
                <th width="15%">Cidade</th>
                <th width="15%">Data abertura</th>
                <th width="15%">Data fechamento</th>
                <th width="5%">Votos inválidos</th>
                <th width="5%">Online?</th>
                <th width="8%">Ações</th>
            </tr>
        </thead>
        <tbody>
            {% if(entities) %}
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('ballotbox_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.name }}</td>
                        <td>{% if entity.poll %}{{ entity.poll.name }}{% endif %}</td>
                        <td>{% if entity.city %}{{ entity.city.name }}{% endif %}</td>
                        <td>{% if entity.openingTime %}{{ entity.openingTime|date('d/m/Y H:i:s') }}{% endif %}</td>
                        <td>{% if entity.closingTime %}{{ entity.closingTime|date('d/m/Y H:i:s') }}{% endif %}</td>
                        <td class="text-center">{{ entity.totalInvalidVotes }}</td>
                        <td class="text-center">{% if entity.isOnline %}Sim{% else %}Não{% endif %}</td>
                        <td class="text-center">
                            <a title="Visualizar" class="btn btn-default btn-sm" href="{{ path('ballotbox_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open"></span></a>
                            <a title="Editar" class="btn btn-default btn-sm" href="{{ path('ballotbox_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                    <tr><td colspan="9" class="text-center">Nenhum registro encontrado</td></tr>
            {% endif %}
        </tbody>
    </table>
</div>