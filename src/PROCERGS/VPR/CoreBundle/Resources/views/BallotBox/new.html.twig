{% extends 'PROCERGSVPRCoreBundle::base.admin.html.twig' %}
{% set contentName = 'Urnas' %}
{% set actionName = 'Adicionar' %}

{% block content -%}
    <div class="navbar">
        <a class="btn btn-default" href="{{ path('ballotbox') }}" role="button"><span class="glyphicon glyphicon-arrow-left"></span> Voltar para lista</a>
    </div>

    {{ form_start(form, {'attr': {'role':'form', 'class':'form-horizontal'}}) }}
        {{ form_errors(form) }}

        <div class="form-group">
            <label class="col-sm-2 control-label">Nome</label>
            <div class="col-sm-5">
                {{ form_errors(form.name) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Eleição</label>
            <div class="col-sm-5">
                {{ form_errors(form.poll) }}
                {{ form_widget(form.poll, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>        

        <div class="form-inline form-group">
            <label class="col-sm-2 control-label">Data abertura</label>
            <div class="col-sm-10">
                {{ form_errors(form.openingTime) }}
                {{ form_widget(form.openingTime, {'attr': {'class': ''}}) }}
            </div>
        </div>

        <div class="form-inline form-group">
            <label class="col-sm-2 control-label">Data fechamento</label>
            <div class="col-sm-10">
                {{ form_errors(form.closingTime) }}
                {{ form_widget(form.closingTime, {'attr': {'class': ''}}) }}
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Secret</label>
            <div class="col-sm-7">
                {{ form_errors(form.secret) }}
                {{ form_widget(form.secret, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Chave privada</label>
            <div class="col-sm-7">
                {{ form_errors(form.privateKey) }}
                {{ form_widget(form.privateKey, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    
        <div class="form-group">
            <label class="col-sm-2 control-label">Chave publica</label>
            <div class="col-sm-7">
                {{ form_errors(form.publicKey) }}
                {{ form_widget(form.publicKey, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Cidade</label>
            <div class="col-sm-5">
                {{ form_errors(form.city) }}
                {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>      

        <div class="form-group">
            <label class="col-sm-2 control-label">Endereço</label>
            <div class="col-sm-10">
                {{ form_errors(form.address) }}
                {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Latitude</label>
            <div class="col-sm-4">
                {{ form_errors(form.latitude) }}
                {{ form_widget(form.latitude, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>    

        <div class="form-group">
            <label class="col-sm-2 control-label">Longitude</label>
            <div class="col-sm-4">
                {{ form_errors(form.longitude) }}
                {{ form_widget(form.longitude, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>    

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        {{ form_errors(form.isOnline) }}
                        {{ form_widget(form.isOnline) }} Urna online
                    </label>
                </div>
            </div>
        </div>
    
        <div class="form-group form-actions">
            <div class="col-lg-10 col-lg-offset-2">
                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-success btn-sm btn-save'},'label':'Salvar'}) }}
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
