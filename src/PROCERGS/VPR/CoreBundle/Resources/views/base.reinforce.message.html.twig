{% extends 'PROCERGSVPRCoreBundle::base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <h3>{{ rTitle }}</h3>
        <div class="alert {{ rClass }}">{{ rMsg1 }}</div>
    </div>

    <div class="col-md-12">
        <div class="jumbotron">
            <p>{{ rMsg2 }}</p>
            <p><a id="btn-popup-nfg" class="btn btn-primary link-popup" role="button" data-specs="width=600,height=450" href="{{ nfgRegisterUrl }}">{{ 'default.nfe.access.offer.click'|trans }}</a></p>
            <p><a id="btn-continue" class="btn btn-primary" role="button" href="{{ continueUrl }}">{{ 'default.continue.click'|trans }}</a></p>
            <p><a id="btn-skip" class="btn btn-primary" role="button" href="{{ path('procergsvpr_core_end') }}">{{ 'default.skip.click' | trans }}</a></p>
        </div>
    </div>    
</div>
{% endblock %}