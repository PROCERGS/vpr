{% extends 'PROCERGSVPRCoreBundle::base.html.twig' %}

{% block body %}

<div class="row">
  <div class="col-md-12 text-left">
    <h2 class="main-title ballot-search-title">
      <span class="icon"></span>
      <span>{% trans %}Ballot Search{% endtrans %}</span>
    </h2>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="inner-content">
      {{ form_start(form, {'attr' : {'role' : 'form', 'class' : 'form-inline'}}) }} {{ form_errors(form) }}
        <div class="form-group">
          {{ form_label(form.city) }}
        </div>
        <div class="form-group">
          {{ form_errors(form.city) }}
          {{ form_widget(form.city, {'attr': {'class': 'form-control city'}}) }}
        </div>
        <div class="form-group">
          {{ form_widget(form.submit, {'attr': {'class': 'btn btn-success'},'label':'Search' | trans}) }}
        </div>
    </div>
    {{ form_end(form) }}
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    {% if options %}

    <div class="inner-content">
      <dl class="ballot ac-custom ac-checkmark search-box">
        {% for currStep,categories in options %}
          <dt class="step-title">{{ currStep }}</dt>
          <dd>
            <dl>
              {% for category,pollOptions in categories %}
                <dt class="step-category">{{ category }}</dt>
                <dd class="options">
                  <ul>
                    {% for option in pollOptions %}
                    <li>
                      <input type="checkbox"/>
                      <label>{{ option.title |trans }}</label>
                    </li>
                    {% endfor %}
                  </ul>
                </dd>
              {% endfor %}
            </dl>
          </dd>
        {% endfor %}
      </dl>
    </div>

    {% endif %}
  </div>
</div>

{% endblock %}

{% block stylesheets %}
{{ parent() }}
{% stylesheets 'bundles/procergsvprcore/css/step/step.css' filter='cssrewrite' %}
<link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
  var citiesList = {{ cities | raw }};
</script>
{% javascripts
  '@PROCERGSVPRCoreBundle/Resources/public/js/components/citiesTypeahead.js' %}
  <script type="text/javascript" src="{{ asset_url }}"></script>
  {% endjavascripts %}
  {% endblock %}
