{% extends 'PROCERGSVPRCoreBundle::base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <h3>Locais de votação</h3>

        <p>Selecione o munípio para ver os locais de votação</p>

        {{ form_start(form, {'attr' : {'role' : 'form'}}) }} {{ form_errors(form) }}
        {{ form_end(form) }}

          <select class="form-control" style="margin-bottom:100px">
          {% for city in cities %}
              <option value="{{ city.id }}">{{ city.name }}</option>
            {% endfor %}
          </select>

        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>Votação</th>
                <th>Endereço</th>
              </tr>
            </thead>
            <tbody>
              {% for box in boxes %}
                <tr>
                  <td>{{ box.poll.name }}</td>
                  <td>{{ box.address }}</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
    </div>
</div>
{% endblock %}
