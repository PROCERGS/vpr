{% extends 'PROCERGSVPRCoreBundle::base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <h3>{{ 'Reinforce your Vote'|trans }}</h3>
        <p>{% trans %}Thank you for casting your vote. If you vote on Rio Grande do Sul you can still reinforce your vote using your Voter Registration.{% endtrans %}</p>
        <p>{% trans %}To continue the voting process fill the information below to validate your vote.{% endtrans %}</p>
        {{ form_start(form, {'attr' : {'role' : 'form', 'id': 'form-posvote-reinforce'}}) }}
            {{ form_errors(form) }}
        <div class="form-group">
                {{ form_label(form.trevoter, 'Voter Registration'| trans) }}
                {{ form_errors(form.trevoter) }}
                {{ form_widget(form.trevoter) }}
        </div>
        <p>
            <a id="btn-continue" class="btn btn-primary" role="button" >{{ 'posvote.continue.click'|trans }}</a>
        </p>
        <p>
            <a id="btn-skip" class="btn btn-primary" role="button" href="{{ path('fos_user_security_logout') }}">{{ 'Skip Step' | trans }}</a>
        </p>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    var posvote = {};
    posvote.trevoterId = '#{{ form.trevoter.vars.id }}';
    $(document).ready(function() {
        $("#btn-continue").click(function() {
            $('#form-posvote-reinforce').submit();
        });
    });
</script>
{% endblock %}