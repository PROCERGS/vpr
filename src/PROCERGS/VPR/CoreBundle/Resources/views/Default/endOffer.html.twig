{% extends 'PROCERGSVPRCoreBundle::base.logout.html.twig' %}

{% block body %}
<div class="row end-offer">
    <div class="col-md-12">
        <h3>{{ 'Thank you for voting'|trans }}</h3>
        <div>{% trans %}Thank you for helping Rio Grande do Sul to grow. Your participation is very important!{% endtrans %}</div>
        <h3>{% trans %}Practice more your citizenship with:{% endtrans %}</h3>
    </div>

    <div class="col-md-6">
        <div class="thumbnail">
            <a  href="{{ nfgLink }}" title="Concorra até R$ 1 milhão!" target="_blank">
          {% image '@PROCERGSVPRCoreBundle/Resources/public/images/banner-NFG.png' %}
                <img src="{{ asset_url }}" alt="{%trans%}NFG{%endtrans%}" class="img-responsive">
          {% endimage %}
            </a>
            <div class="caption">
                <h3>{% trans %}Chance to win 1 million!{% endtrans %}</h3>
                <div class="text">
                    <p>{% trans %}Join the Nota Fiscal Gaucha and compete for prizes of up to R$ 1 million. Register Now!{% endtrans %}</p>
                </div>
                <a id="btn-popup-nfg" class="btn btn-success btn-lg btn-block link-popup" role="button" href="{{ nfgLink }}">{% trans %}Access Nota Fiscal Gaúcha{% endtrans %}</a>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="thumbnail">
            <a href="{{ loginCidadaoLink }}" title="Crie sua conta!" target="_blank">
          {% image '@PROCERGSVPRCoreBundle/Resources/public/images/banner-meuRS.png' %}
                <img src="{{ asset_url }}" alt="{%trans%}MEU-RS{%endtrans%}" class="img-responsive">
          {% endimage %}
            </a>
            <div class="caption">
                <h3>{% trans %}Create your account{% endtrans %}</h3>
                <div class="text">
                    <p>{% trans %}Are you registered on Citizen Login? Register now and get personalized content on Rio Grande do Sul's services.{% endtrans %}</p>
                </div>
                <a title="Cadastre-se aqui" id="btn-popup-lc" class="btn btn-success btn-lg btn-block link-popup" role="button" href="{{ loginCidadaoLink }}">{{ 'Register Here'|trans }}</a>
            </div>
        </div>
    </div>

    <div class="col-sm-12 text-center">
        <a class="btn btn-success btn-lg" role="button" href="{{ path('procergsvpr_core_homepage') }}">{{ 'Back to home' | trans }}</a>
    </div>

</div>
{% endblock %}
