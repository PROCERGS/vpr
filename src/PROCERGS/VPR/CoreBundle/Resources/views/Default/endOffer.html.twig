{% extends 'PROCERGSVPRCoreBundle::base.logout.html.twig' %}

{% block body %}
<div class="modal fade" id="bancoMundialModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">{% trans %}Banco Mundial research{% endtrans %}</h4>
      </div>
      <div class="modal-body">
        <p>{% trans %}Answer to World Bank research on Priorities Voting and help to strengthen participation in RS!{% endtrans %}</p>
      </div>
      <div class="modal-footer">
        <a id="btn-popup-sm" data-dismiss="modal" class="btn btn-success btn-lg btn-block link-popup" role="button" data-specs="width=800,height=600" href="{{ link_sm }}">{{ 'Answer Survey' | trans }}</a>
      </div>
    </div>
  </div>
</div>

<div class="row end-offer">
    <div class="col-md-12">
        <h3>{{ 'Thank you for voting'|trans }}</h3>
        <div class="alert alert-success">{% trans %}Thank you for helping Rio Grande do Sul to grow. Your participation is very important!{% endtrans %}</div>
    </div>
    <div class="col-md-4">
      <div class="thumbnail">
        {% image '@PROCERGSVPRCoreBundle/Resources/public/images/banner-bancoMundial.png' %}
        <img src="{{ asset_url }}" alt="{%trans%}Banco Mundial{%endtrans%}" class="img-responsive">
        {% endimage %}
        <div class="caption">
          <h3>{% trans %}Banco Mundial research{% endtrans %}</h3>
          <div class="text">
            <p>{% trans %}Answer to World Bank research on Priorities Voting and help to strengthen participation in RS!{% endtrans %}</p>
          </div>
          <a id="btn-popup-sm" class="btn btn-success btn-lg btn-block link-popup" role="button" data-specs="width=800,height=600" href="{{ link_sm }}">{{ 'Answer Survey' | trans }}</a>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="thumbnail">
        {% image '@PROCERGSVPRCoreBundle/Resources/public/images/banner-NFG.png' %}
        <img src="{{ asset_url }}" alt="{%trans%}NFG{%endtrans%}" class="img-responsive">
        {% endimage %}
        <div class="caption">
          <h3>Nota Fiscal Gaúcha</h3>
          <div class="text">
            <p>{% trans %}Are you participating on Nota Fiscal Gaúcha? Subscribe and compete for prizes of up to R$ 1 million!{% endtrans %}</p>
          </div>
          <a id="btn-popup-nfg" class="btn btn-success btn-lg btn-block link-popup" role="button" data-specs="width=1024,height=600" href="{{ link_nfg }}">{% trans %}Access Nota Fiscal Gaúcha{% endtrans %}</a>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="thumbnail">
        {% image '@PROCERGSVPRCoreBundle/Resources/public/images/banner-meuRS.png' %}
        <img src="{{ asset_url }}" alt="{%trans%}MEU-RS{%endtrans%}" class="img-responsive">
        {% endimage %}
        <div class="caption">
          <h3>Login Cidadão</h3>
          <div class="text">
            <p>{% trans %}Are you registered on Citizen Login? Register now and get personalized content on Rio Grande do Sul's services.{% endtrans %}</p>
          </div>
          <a id="btn-popup-lc" class="btn btn-success btn-lg btn-block link-popup" role="button" data-specs="width=800,height=600" href="{{ link_lc }}">{{ 'Register Here'|trans }}</a>
        </div>
      </div>
    </div>

    <div class="col-sm-12 text-center">
      <a class="btn btn-success btn-lg" role="button" href="{{ path('procergsvpr_core_homepage') }}">{{ 'Back to home' | trans }}</a>
    </div>

</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}

<script type="text/javascript">
$(function() {
  $('#bancoMundialModal').modal('show');
});
</script>

{% endblock %}