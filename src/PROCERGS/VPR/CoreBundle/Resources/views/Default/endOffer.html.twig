{% extends 'PROCERGSVPRCoreBundle::base.logout.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <h3>{{ 'Thank you for voting'|trans }}</h3>
        <div class="alert alert-success">{% trans %}Thank you for helping Rio Grande do Sul to grow. Your feedback is very important{% endtrans %}</div>
    </div>

    <div class="col-md-4">
      <div class="thumbnail">
        <img src="http://placehold.it/300x200" alt="...">
        <div class="caption">
          <h3>NFG</h3>
          <p>{% trans %}Are you participating on Nota Fiscal Gaúcha? Subscribe now and compete for prizes!{% endtrans %}</p>
          <p>
            <a id="btn-popup-nfg" class="btn btn-success btn-lg btn-block link-popup" role="button" data-specs="width=1024,height=600" href="{{ link_nfg }}">{% trans %}Access Nota Fiscal Gaúcha{% endtrans %}</a>
          </p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="thumbnail">
        <img src="http://placehold.it/300x200" alt="...">
        <div class="caption">
          <h3>Login cidadão</h3>
          <p>{% trans %}Are you registered on Citizen Login? Register now and get personalized content on Rio Grande do Sul's services.{% endtrans %}</p>
          <p><a id="btn-popup-lc" class="btn btn-success btn-lg btn-block link-popup" role="button" data-specs="width=800,height=600" href="{{ link_lc }}">{{ 'Register Here'|trans }}</a></p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="thumbnail">
        <img src="http://placehold.it/300x200" alt="...">
        <div class="caption">
          <h3>Banco mundial</h3>
          <p>{% trans %}World Bank wants to know your opinion! Click below to answer the Survey.{% endtrans %}</p>
          <p><a id="btn-popup-sm" class="btn btn-success btn-lg btn-block link-popup" role="button" data-specs="width=800,height=600" href="{{ link_sm }}">{{ 'Answer Survey' | trans }}</a></p>
        </div>
      </div>
    </div>

    <div class="col-sm-12 text-center">
      <a class="btn btn-success btn-lg" role="button" href="{{ path('procergsvpr_core_homepage') }}">{{ 'Back to home' | trans }}</a>
    </div>

</div>
{% endblock %}
